<%- include('../partials/header.ejs') -%>
<h1 class="text-center">Carga tus imágenes aquí</h1>
<div class="d-flex align-items-center justify-content-center">
    <div class="card">
        <div class="card-body">
            <form action="/upload/<%= id %>/charge" method="post" enctype="multipart/form-data">
                <input class="form-control" type="file" name="image" id="" required>
                <br>
                <button type="submit" class="btn btn-primary w-100">Upload</button>
                <div class="mt-3">
                    <a class="btn btn-secondary w-100" href="/registrar">Volver atrás</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') -%>